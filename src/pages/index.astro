---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import { getCollection } from 'astro:content';

const entrada = await getCollection('entrada');

entrada[0].id

---

<Layout title="Rutas por las domus de Hispania">
<main>
	<h1 class="text-center text-7xl font-extrabold m-24">Domus 
		<span class="block">por Hispania</span>
	</h1>	

	<section aria-label="Libro recomendados para progrmadores">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
				{
					entrada.map((entrada) => {
						const{ slug , data } = entrada;
						const { title, author, img, description, fecha, localidad } = data;

						return (
							<article class="flex">
								<a href={`/entrada/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
									<img
										transition:name={`img-${slug}` } 
										class="mr-5 w-48 rounded" 
										src={`/${img}`} 
										alt={title} 
									/>
								</a>

								<div class="flex flex-col justify-center">

									<h2 class="mb-2 text-2xl font-bold leading-tight text-gray-900 dark:text-white">
										{title}
									</h2>								

									<p class="mb-4 text-gray-300 max-w-sm">
										{description}
									</p>

									<p>
										{fecha}
									</p>
									
								
								</div>
							</article>
					)
				})
				}
			</div>

		</div>
	</section>


</main>
</Layout>
	

